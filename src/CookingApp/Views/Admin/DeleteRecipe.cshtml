@model CookingApp.Models.Recipe

@{
    ViewData["Title"] = "Delete Recipe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete Recipe</h2>

<h3>Are you sure you want to delete this recipe?</h3>

<div>
    <h4>@Model.Name</h4>
    <dl class="dl-horizontal">
        <dt>Category</dt>
        <dd>@Model.Category</dd>
        
        <dt>Ingredients</dt>
        @* <dd>
            @if (Model.Ingredients != null && Model.Ingredients.Any())
            {
                <ul>
                    @foreach (var ingredients in Model.Ingredients)
                    {
                        <li>@ingredients</li>
                    }
                </ul>
            }
            else
            {
                <p>No ingredients listed.</p>
            }
        </dd>
        
        <dt>Instructions</dt>
        <dd>@Model.Ingredients</dd> *@
    </dl>

    <form asp-action="DeleteRecipe" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a href="@Url.Action("GetAll", "Recipes")" class="btn btn-secondary">Cancel</a>
    </form>
</div>

<style>
    h2, h3 {
        color: #333;
    }
    
    h4 {
        margin-top: 0;
        color: #d9534f;
    }
    
    .dl-horizontal dt {
        font-weight: bold;
    }

    .btn {
        margin-top: 20px;
        margin-right: 10px;
        text-decoration: none;
        color: #fff;
        padding: 10px 20px;
        border-radius: 5px;
        background-color: #d9534f;
    }

    .btn-secondary {
        background-color: #5bc0de;
    }
</style>