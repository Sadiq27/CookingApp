@model CookingApp.Models.Recipe

@{
    ViewData["Title"] = "Edit Recipe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Recipe</h2>

<form asp-action="EditRecipe" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Category"></label>
        <input asp-for="Category" class="form-control" />
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Instructions"></label>
        <textarea asp-for="Instructions" class="form-control"></textarea>
        <span asp-validation-for="Instructions" class="text-danger"></span>
    </div>
    @* <div class="form-group">
        <label>Ingredients</label>
        <textarea asp-for="Ingredients" class="form-control" placeholder="Add ingredients, separated by commas"></textarea>
    </div> *@
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
